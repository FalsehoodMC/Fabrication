{
  "schemaVersion": 1,
  "id": "fabrication",
  "version": "${version}",

  "name": "Fabrication",
  "description": "A huge collection of vanilla tweaks and small features.",
  "authors": [
    "unascribed",
    "SFort"
  ],
  "contact": {
    "homepage": "https://unascribed.com/fabrication",
    "source": "https://github.com/unascribed/Fabrication",
    "issues": "https://github.com/unascribed/Fabrication/issues"
  },

  "license": "MIT",

  "environment": "*",
