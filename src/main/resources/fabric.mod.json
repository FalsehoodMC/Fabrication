{
  "schemaVersion": 1,
  "id": "fabrication",
  "version": "${version}",

  "name": "Fabrication",
  "description": "A huge collection of vanilla tweaks and small features.",
  "authors": [
    "unascribed",
    "SFort"
  ],
  "contact": {
    "homepage": "https://unascribed.com/fabrication",
    "source": "https://github.com/unascribed/Fabrication",
    "issues": "https://github.com/unascribed/Fabrication/issues"
  },

  "license": "MIT",

  "environment": "*",
  "entrypoints": {
    "main": ["com.unascribed.fabrication.FabricationMod"],
    "client": ["com.unascribed.fabrication.FabricationModClient"],
    "modmenu": ["com.unascribed.fabrication.ModMenuInitializer"],
    "fscript": ["com.unascribed.fabrication.FScriptInitializer"]
  },
  "mixins": ["fabrication.mixins.json"],
  "accessWidener": "fabrication.accesswidener",
  "icon": "assets/fabrication/icon.png",

  "depends": {
    "fabricloader": ">=0.12.0",
    "minecraft": ">=1.16",
    "fabric-resource-loader-v0": "*",
    "fabric-command-api-v1": "*",
    "fabric-key-binding-api-v1": "*",
    "fabric-rendering-v1": "*"
  },
  "suggests": {
  }
